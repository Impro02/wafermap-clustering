{
    "project_name": "wafermap-clustering",
    "directories": {
        "logs": "{{root}}/logs",
        "tmp": "{{root}}/tmp"
    },
    "platforms": {
        "windows": {
            "root": "/{{project_name}}",
            "home": "/{{project_name}}"
        },
        "linux": {
            "root": "/application/{{user}}",
            "home": "/home/{{user}}"
        }
    },
    "attribute": "DYN_CLUSTER_ID",
    "clustering": {
        "dbscan": {
            "eps": 4,
            "min_samples": 3
        },
        "hdbscan": {
            "min_samples": 3,
            "min_cluster_size": 5
        }
    }
}